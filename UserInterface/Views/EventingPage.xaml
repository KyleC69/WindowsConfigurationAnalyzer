<Page
    x:Class="KC.WindowsConfigurationAnalyzer.UserInterface.Views.EventingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:KC.WindowsConfigurationAnalyzer.UserInterface.Helpers"
    xmlns:vm="using:KC.WindowsConfigurationAnalyzer.UserInterface.ViewModels"
    xmlns:models="using:KC.WindowsConfigurationAnalyzer.UserInterface.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:EventLevelToBrushConverter x:Key="EventLevelToBrushConverter" />
        <!-- DataTemplate for property items -->
        <DataTemplate x:Key="PropertyItemTemplate" x:DataType="vm:PropertyItem">
            <Grid Margin="0" Padding="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{x:Bind Name}" FontWeight="SemiBold" />
                <TextBlock Grid.Column="1" Text="{x:Bind Value}" TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>
    </Page.Resources>


    <Page.DataContext>

        <vm:EventingViewModel />
    </Page.DataContext>

    <Grid x:Name="ContentArea">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <!--  Column 0 controls Row 0    -->
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0" Margin="1" Spacing="8">
                <TextBlock Text="Select Active Log" />
                <ComboBox x:Name="LogSelectorComboBox"
                          Width="300"
                          ItemsSource="{x:Bind ViewModel.LogNames}"
                          SelectedItem="{x:Bind ViewModel.SelectedLogName, Mode=TwoWay}" />

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                    <CheckBox Content="Get all events" IsChecked="{x:Bind ViewModel.OverrideLimit, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                    <TextBlock Text="Hours Back:" VerticalAlignment="Center" />
                    <TextBox Width="80"
                             Text="{x:Bind ViewModel.HoursBackText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Refresh" Command="{x:Bind ViewModel.RefreshCommand, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="1" HorizontalAlignment="Right" Spacing="8">
                    <Button Content="Search" Command="{x:Bind ViewModel.SearchCommand}" />
                    <TextBox Width="320"
                             Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="Enter search text" />
                </StackPanel>
            </StackPanel>

            <!-- Column 1 - Row 1 Events matching the query displayed  -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1">
                <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,10,0,0" Padding="0" CornerRadius="20"
                        Background="Gray">
                    <ListView Margin="10" Name="LogEventsListView" Width="500" Height="300"
                              ItemsSource="{x:Bind ViewModel.LogEvents}"
                              SelectedItem="{x:Bind ViewModel.SelectedLogEvent, Mode=TwoWay}"
                              SelectionChanged="{x:Bind ViewModel.Selector_OnSelectionChanged}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:EventLogRecordClone">
                                <Grid Margin="0" Padding="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!-- Level glyph colored by level -->
                                    <FontIcon Margin="0" Grid.Column="0" FontSize="14" Glyph="&#xEB90;"
                                              Foreground="{x:Bind Level, Converter={StaticResource EventLevelToBrushConverter}}" />
                                    <TextBlock Padding="0" Margin="0" Grid.Column="1" Text="{x:Bind TimeCreated}" />
                                    <TextBlock Padding="0" Margin="0" Grid.Column="2" Text="{x:Bind Id}" />
                                    <TextBlock Padding="0" Margin="0" Grid.Column="3" Text="{x:Bind ProviderName}"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </StackPanel>

            <!-- Column 1 - Row 1 Events matching the query displayed  -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1">
                <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,10,0,0" Padding="0" CornerRadius="20"
                        Background="Gray">
                    <ListView Margin="10" Name="CorrelatedEventsListView" Width="500" Height="300"
                              ItemsSource="{x:Bind ViewModel.CorrelatedLogEvents}"
                              SelectedItem="{x:Bind ViewModel.CorSelectedLogEvent, Mode=TwoWay}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:EventLogRecordClone">
                                <Grid Margin="0" Padding="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!-- Level glyph colored by level -->
                                    <FontIcon Margin="0" Grid.Column="0" FontSize="14" Glyph="&#xEB90;"
                                              Foreground="{x:Bind Level, Converter={StaticResource EventLevelToBrushConverter}}" />
                                    <TextBlock Padding="0" Margin="0" Grid.Column="1" Text="{x:Bind TimeCreated}" />
                                    <TextBlock Padding="0" Margin="0" Grid.Column="2" Text="{x:Bind Id}" />
                                    <TextBlock Padding="0" Margin="0" Grid.Column="3" Text="{x:Bind TaskDisplayName}"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </StackPanel>
            <!-- Column 2 Selected event properties displayed -->
            <!-- Properties list removed; now displayed in separate non-modal windows per selection -->
        </Grid>
    </Grid>
</Page>